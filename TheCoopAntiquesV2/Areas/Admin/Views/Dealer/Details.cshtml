@model TheCoopAntiquesV2.Models.Dealer
@{
    ViewData["Title"] = "Details";
}
<br />
<h2 class="text-primary">View Dealer</h2>


<div class="row">
    <div class="col-9">
        <div class="form-group row">
            <div class="col-6">
                <label asp-for="FirstName"></label>
            </div>
            <div class="col-6">
                <label asp-for="LastName"></label>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <input asp-for="FirstName" disabled class="form-control" />
            </div>
            <div class="col-6">
                <input asp-for="LastName" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-12">
                <label asp-for="Address1"></label>
            </div>
            <div class="col-12">
                <input asp-for="Address1" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-12">
                <label asp-for="Address2"></label>
            </div>
            <div class="col-12">
                <input asp-for="Address2" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <label asp-for="City"></label>
            </div>
            <div class="col-2">
                <label asp-for="State"></label>
            </div>
            <div class="col-4">
                <label asp-for="Zip"></label>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <input asp-for="City" disabled class="form-control" />
            </div>
            <div class="col-2">
                <input asp-for="State" disabled class="form-control" />
            </div>
            <div class="col-4">
                <input asp-for="Zip" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <label asp-for="PhoneNumber"></label>
            </div>
            <div class="col-6">
                <label asp-for="Email"></label>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <input asp-for="PhoneNumber" disabled class="form-control" />
            </div>
            <div class="col-6">
                <input asp-for="Email" disabled class="form-control" />
            </div>
        </div>
    </div>

    <div class="form-group col-2.5">
        <a asp-action="Edit" class="btn btn-success btn-block" asp-route-id="@Model.Id">Edit Dealer</a>
        <a asp-action="Index" class="btn btn-primary btn-block">Back to View Dealers</a>
    </div>
</div>

