@model TheCoopAntiquesV2.Models.TaxRate
@{
    ViewData["Title"] = "Create";
}
<br />
<h2 class="text-primary">New Tax Rate</h2>
<br />
<form method="post" asp-action="Create">
    <div class="row">
        <div class="col-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="StartDate"></label>
                </div>
                <div class="col-5">
                    <input asp-for="StartDate" type="date" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="EndDate"></label>
                </div>
                <div class="col-5">
                    <input asp-for="EndDate" type="date" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Amount"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Amount" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group col-2.5">
            <input type="submit" class="btn btn-success btn-block" value="Add Tax Rate" />
            <a asp-action="Index" class="btn btn-primary btn-block">Back to Tax Rates</a>
        </div>
    </div>
</form>
